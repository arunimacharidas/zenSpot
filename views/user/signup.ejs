<div class="page-header breadcrumb-wrap">
    <div class="container">
        <div class="breadcrumb">
            <a href="/" rel="nofollow">Home</a>
            <span></span> Login / Register
        </div>
    </div>
</div>
<section class="pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <div class="row">
                   
                    <div class="col-lg-6 justify-content-center d- m-auto" >
                        <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h3 class="mb-30">Create an Account</h3>
                                </div>
                                <form method="post" id="signin" action="/signup" onsubmit="return validateSubmit()">
                                    <div class="form-group">
                                        <input type="text" required="" name="Name" id="Name" placeholder="Name"
                                            onkeyup="return validateName()">
                                        <span id="NameErr"
                                            style="color: red; font-size: medium; margin-top: 5px;"></span>
                                    </div>
                                    <div class="form-group">
                                        <input required="" type="email" id="Email" name="Email" placeholder="Email"
                                            onkeyup="return validateEmail()">
                                        <span id="EmailErr"
                                            style="color: red; font-size: medium; margin-top: 5px;"></span>
                                    </div>

                                    <div class="form-group">
                                        <input required="" type="password" id="Password" name="password"
                                            placeholder="Password" onkeyup="return validatePassword()">
                                        <span id="PasswordErr"
                                            style="color: red; font-size: medium; margin-top: 5px;"></span>
                                    </div>
                                    <div class="form-group">
                                        <input required="" type="password" id="ConfirmPass" name="confirm Password"
                                            placeholder="Confirm password" onkeyup="return confirmPassword()">
                                        <span id="ConfirmErr"
                                            style="color: red; font-size: medium;  margin-top: 5px;"></span>
                                    </div>
                                    <div class="form-group">
                                        <input required="" type="text" min="10" max="10" id="MobileNumber" name="Number"
                                            placeholder="MobileNumber" onkeyup="return validateMobileNumber()">
                                        <span id="NumberErr"
                                            style="color: red; font-size: medium; margin-top: 5px;"></span>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-fill-out btn-block hover-up mb-2"
                                            name="signup">Register</button>
                                        <span id="submitErr"
                                            style="color: red; font-size: medium; margin-top: 5px;"></span>

                                        <a href="/login"><button class="btn btn-fill-out btn-block hover-up"
                                                name="signup">Already have an account?</button></a>

                                    </div>
                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</main>



<script>


    function validateName() {
        const Name = document.getElementById('Name').value;
        const regName = /^[a-zA-Z]*$/;
        if (!regName.test(Name)) {
            document.getElementById('NameErr').innerHTML = "Please enter a valid name";
            return false;
        } else {
            document.getElementById('NameErr').innerHTML = "";
            return true;
        }
    }

    function validateEmail() {
        const Email = document.getElementById('Email').value;
        const regEmail = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!regEmail.test(Email)) {
            document.getElementById('EmailErr').innerHTML = "Please enter a valid email address";
            return false;
        } else {
            document.getElementById('EmailErr').innerHTML = "";
            return true;
        }
    }


    function validatePassword() {
        const Password = document.getElementById('Password').value;
        const regPass = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*]).{8,}$/;
        if (!regPass.test(Password)) {
            document.getElementById('PasswordErr').innerHTML = 'Please enter a password';
            return false;
        } else {
            document.getElementById('PasswordErr').innerHTML = "";
            return true;
        }
    }

    function confirmPassword() {
        const password = document.getElementById('Password').value;
        const Confirm = document.getElementById('ConfirmPass').value;
        if (password !== Confirm) {
            document.getElementById('ConfirmErr').innerHTML = 'Please enter a valid password';
            return false;
        } else {
            document.getElementById('ConfirmErr').innerHTML = "";
            return true;
        }
    }
    function validateMobileNumber() {
        const Num = document.getElementById('MobileNumber').value;
        const regNum = /^(\+?\d{1,3}[- ]?)?\d{10}$/
        if (!regNum.test(Num)) {
            document.getElementById('NumberErr').innerHTML = 'Invalid Number Please Valid Number';
            return false;
        } else if (Num.length == 10) {
            document.getElementById('NumberErr').innerHTML = '';
            return true;
        } else {
            document.getElementById('NumberErr').innerHTML = 'Invalid Number Please Valid Number';
            return false;
        }
    }

    function validateSubmit() {
        if (!confirmPassword() || !validateName() || !validateMobileNumber() || !validatePassword() || !validateEmail() || !confirmPassword()) {
            document.getElementById('submitErr').innerHTML = 'Error Submiting Fill All Fields'
            return false
        } else {
            document.getElementById('signup').submit()
            return true
        }
    }
</script>