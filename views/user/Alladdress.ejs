<section class="pt-150 pb-150">
    <div class="container">
        <div class=" d-flex  justify-content-end mb-50"><a href="/addaddress"><button
                    class="btn btn-md rounded-pill ">Add
                    Address</button></a></div>

        <div class="row">



            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Your Orders</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="myTable">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Pincode</th>
                                    <th>Edit</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <% address.forEach((adress,index)=>{%>
                                <tbody>
                                    <td>
                                        <%= index+1 %>
                                    </td>
                                    <td>

                                        <%= adress.name%>
                                    </td>
                                        <td>
                                            <%= adress.billing_address%>
                                        </td>
                                        <td>
                                            <%= adress.zipcode%>
                                        </td>

                                        <td>
                                            <a href="" class="btn btn-md rounded font-sm">Edit</a>
                                        </td>
                                        <td>
                                            <a href="/deleteaddress/<%= index %>" class="btn btn-md rounded font-sm">Delete</a>
                                        </td>
                                </tbody>
                                <%})%>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
</main>








</body>

</html>