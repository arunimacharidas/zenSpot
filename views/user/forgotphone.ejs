    <script>

        function validateMobileNumber() {
            const Num = document.getElementById('MobileNumber').value;
            const regNum = /^(\+?\d{1,3}[- ]?)?\d{10}$/
            if (!regNum.test(Num)) {
                document.getElementById('NumberErr').innerHTML = 'Invalid Number Please Valid Number';
                return false;
            } else if (Num.length == 10) {
                document.getElementById('NumberErr').innerHTML = '';
                return true;
            } else {
                document.getElementById('NumberErr').innerHTML = 'Invalid Number Please Valid Number';
                return false;
            }
        }

        function validateSubmit() {
            if (!validateMobileNumber()) {
                document.getElementById('submitErr').innerHTML = 'Error Submiting Fill All Fields'
                return false
            } else {
                document.getElementById('otpphone').submit()
                return true
            }
        }
    </script>