<main>
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/login" rel="nofollow">Login</a>
                <span></span> Forgot Password
            </div>
        </div>
    </div>

    <section class="pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 m-auto">
                    <div class="row">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-6 justify-content-center d-">
                            <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                                <div class="padding_eight_all bg-white">
                                    <div class="heading_s1">
                                        <h3 class="mb-30">Set Password</h3>
                                    </div>
                                    <form action="/newPassword" method="post" id="signin"
                                        onsubmit="return validateSubmit()">


                                        <div class="form-group">
                                            <input required="" type="password" id="Password" name="password"
                                                placeholder="Password" onkeyup="return validatePassword()">
                                            <span id="PasswordErr"
                                                style="color: red; font-size: medium; margin-top: 5px;"></span>
                                        </div>
                                        <div class="form-group">
                                            <input required="" type="password" id="ConfirmPass" name="confirm Password"
                                                placeholder="Confirm password" onkeyup="return confirmPassword()">
                                            <span id="ConfirmErr"
                                                style="color: red; font-size: medium;  margin-top: 5px;"></span>
                                        </div>

                                        <button type="submit" class="btn btn-fill-out btn-block hover-up"
                                        name="signup" >Submit</button>

                                    </form>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


<script>
    function validatePassword() {
        const Password = document.getElementById('Password').value;
        const regPass = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*]).{8,}$/;
        if (!regPass.test(Password)) {
            document.getElementById('PasswordErr').innerHTML = 'Please enter a password';
            return false;
        } else {
            document.getElementById('PasswordErr').innerHTML = "";
            return true;
        }
    }

    function confirmPassword() {
        const password = document.getElementById('Password').value;
        const Confirm = document.getElementById('ConfirmPass').value;
        if (password !== Confirm) {
            document.getElementById('ConfirmErr').innerHTML = 'Please enter a valid password';
            return false;
        } else {
            document.getElementById('ConfirmErr').innerHTML = "";
            return true;
        }
    }


    function validateSubmit() {
        if (!confirmPassword() || !validatePassword()) {
            document.getElementById('submitErr').innerHTML = 'Error Submiting Fill All Fields'
            return false
        } else {
            document.getElementById('signup').submit()
            return true
        }
    }
</script>

